---
const routes = [
  { href: "#experience", text: "Experencia" },
  { href: "#projects", text: "Proyectos" },
];
---

<header class="flex justify-center items-center px-48 py-8 sticky top-0 w-full">
  <nav class="border border-black rounded-full px-2 py-1 flex flex-row bg-black/50 backdrop-blur-2xl">
    {
      routes.map((route) => (
        <a class="hover:bg-white/10 rounded-full px-3 transition text-xs lg:text-lg md:text-sm" href={route.href}>
          {route.text}
        </a>
      ))
    }
  </nav>
</header>
