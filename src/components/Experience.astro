---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERENCIE = [
  {
    title: "Apphive - FullStack Developer",
    company: "Apphive",
    date: "jul. 2019 - actualidad",
    description:
      "Aptitudes: HTML5 · Gestión del tiempo · Multitarea · Desarrollo de productos · Lenguaje SASS · Hojas de estilos en cascada (CSS) · HTML · Apollo GraphQL · Amazon Web Services (AWS) · Firebase · ESLint · Jest · GraphQL · Redux.js · SQL · Git · JavaScript · React.js · TypeScript · React Native",
    href: "https://apphive.io/",
  },
];
---

<ol class="relative border-s border-gray-20 md:ml-4 ml-2">
  {
    EXPERENCIE.map((item) => (
      <ExperienceItem title={item.title} date={item.date} description={item.description} href={item.href} />
    ))
  }
</ol>
